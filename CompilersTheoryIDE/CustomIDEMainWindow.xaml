<Window x:Class="CustomIDEMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Псевдо-IDE" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Правка"/>
            <MenuItem Header="Текст"/>
            <MenuItem Header="Пуск"/>
            <MenuItem Header="Справка"/>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Открыть"/>
            <Button Content="Загрузить"/>
            <Button Content="Сохранить"/>
            <Button Content="Undo"/>
            <Button Content="Redo"/>
            <Button Content="Копировать"/>
            <Button Content="Вставить"/>
        </ToolBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch"/>
            <TextBox Grid.Row="2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        </Grid>
    </DockPanel>
</Window>